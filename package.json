{
  "name": "@hankaibo/amy-ui",
  "version": "0.0.1",
  "description": "A modern ui library",
  "main": "src/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tailwindcss -i ./src/index.css -o ./dist/index.css",
    "prepare": "husky install",
    "tailwindcss": "tailwindcss -i ./src/index.css -o ./dist/index.css --watch"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "keywords": [
    "ui",
    "js",
    "javascript",
    "modern browser"
  ],
  "author": "hankaibo",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.2",
    "postcss": "^8.4.31",
    "prettier": "2.5.1",
    "tailwindcss": "^3.0.17"
  }
}
